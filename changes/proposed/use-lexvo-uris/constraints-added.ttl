@base <http://n2t.net/ark:/99152/> .

@prefix periodo: <p0v#> .

@prefix dce: <http://purl.org/dc/elements/1.1/> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix lvont: <http://lexvo.org/ontology#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

periodo:DefinitionShape
  sh:property 
    periodo:DefinitionLanguageTagShape ,
    periodo:DefinitionLanguageShape ,
    periodo:DefinitionScriptShape
  .

periodo:DefinitionLanguageTagShape
  rdf:type sh:PropertyShape ;
  sh:path dce:language ;
  sh:name "language tag" ;
  sh:description "Language tag of the preferred label for this period" ;
  sh:datatype xsd:string ;
  sh:minCount 1 ;
  sh:maxCount 1 ;
  sh:message "Problem with definition language tag" ;
  .

periodo:DefinitionLanguageShape
  sh:nodeKind sh:IRI ;
  sh:pattern "^http://lexvo.org/id/iso639-[13]/[a-z]{2,3}" ;
  .

periodo:DefinitionScriptShape
  rdf:type sh:PropertyShape ;
  sh:path lvont:inScript ;
  sh:name "script" ;
  sh:description "Script of the preferred label for this period" ;
  sh:nodeKind sh:IRI ;
  sh:pattern "^http://lexvo.org/id/script/[A-Z][a-z]{3}" ;
  sh:maxCount 1 ;
  sh:message "Problem with script" ;
  .
